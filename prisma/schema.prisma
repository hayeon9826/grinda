// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id            String         @id @default(uuid())
  name          String?
  email         String         @unique
  userType      UserType       @default(USER)
  payments      Payment[]
  headOfficeId  String?
  firebaseId    String?
  headOffice    HeadOffice?    @relation(fields: [headOfficeId], references: [id])
  branchOfficeId  String?
  branchOffice    BranchOffice?    @relation(fields: [branchOfficeId], references: [id])
  createdAt     DateTime       @default(now())
  updatedAt     DateTime?      @updatedAt
}

model Payment{
  id          String   @id    @default(uuid())
  userId      String?
  amount      Int?
  memo        String?
  image       String?
  status      PaymentStatus  @default(WAITING)
  user        User?    @relation(fields: [userId], references: [id])
  branchOfficeId  String?
  branchOffice    BranchOffice?    @relation(fields: [branchOfficeId], references: [id])
  paidAt      DateTime? 
  createdAt   DateTime       @default(now())
  updatedAt   DateTime?      @updatedAt
  @@index([userId, status])
}

model HeadOffice{
  id          String   @id    @default(uuid())
  name        String?
  desc        String?
  zipcode     Int?
  address1    String?
  address2    String?
  branchOffices    BranchOffice[]
  users            User[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime?      @updatedAt
}

model BranchOffice{
  id              String   @id    @default(uuid())
  name            String?
  desc            String?
  zipcode         Int?
  headOfficeId    String?
  headOffice      HeadOffice?    @relation(fields: [headOfficeId], references: [id])
  users           User[]
  payments        Payment[]
  address1        String?
  address2        String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime?      @updatedAt
}

enum UserType {
  USER
  MASTER
  HEAD_ADMIN
  BRANCH_ADMIN
}


enum PaymentStatus {
  WAITING
  CONFIRM
  CANCEL
}

